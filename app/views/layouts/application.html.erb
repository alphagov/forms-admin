<% content_for :skip_link do %>
  <a href="#main-content" class="govuk-skip-link" data-module="govuk-skip-link"><%= t("skip_to_main_content") %></a>
<% end %>

<% content_for :header do %>
  <%= render HeaderComponent::View.new(**header_component_options(user:@current_user))%>

<% content_for :service_navigation do %>
  <%= render ServiceNavigationComponent::View.new %>
<% end %>

<% content_for :before_content do %>
  <%= govuk_phase_banner(tag: { text: "Beta" }) do %>
    <%= t("phase_banner.before_link") %>
    <%= govuk_link_to t("phase_banner.link"), t("phase_banner.feedback_survey_url") %>
    <%= t("phase_banner.after_link") %>
  <% end %>
  <%= yield :back_link %>
  <%= render ActAsUserBannerComponent::View.new(acting_as_user, actual_user) %>
<% end %>

<% content_for :footer do %>
  <% meta_links = {t("footer.accessibility_statement") => "https://www.forms.service.gov.uk/accessibility", t("footer.cookies") => "https://www.forms.service.gov.uk/cookies", t("footer.privacy") => "https://www.forms.service.gov.uk/privacy", t("footer.terms_of_use") => "https://www.forms.service.gov.uk/terms-of-use"} %>
  <%= govuk_footer meta_items_title: t("footer.helpful_links"), meta_items: meta_links %>
<% end %>

<%= render template: "layouts/base" %>
