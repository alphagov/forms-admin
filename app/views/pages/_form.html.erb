<%= f.govuk_error_summary %>
<!-- Long question text input -->
<%= f.govuk_text_field :question_text, label: { size: 'm' } %>

<hr class="govuk-section-break govuk-section-break--m govuk-section-break--visible" />

<!-- Hint text -->
<%= f.govuk_text_field :hint_text, label: { size: 'm' } %>

<hr class="govuk-section-break govuk-section-break--m govuk-section-break--visible" />

<% if FeatureService.enabled?(:make_question_optional) %>
  <%= f.govuk_check_boxes_fieldset :is_optional, multiple: false, legend: { text: "Add rules to this question", size: 'm' } do %>
    <%= f.govuk_check_box :is_optional, true,0, multiple: false,
                          small: true,
                          label: { text: "Make this question optional" },
                          hint: { text: 'Allow people to skip this question if it does not apply to them.' } %>

  <% end %>
  <hr class="govuk-section-break govuk-section-break--m govuk-section-break--visible" />
<% end  %>

<%= f.govuk_collection_radio_buttons(
      :answer_type,
      @answer_types,
      ->(option) { option },
      ->(option) { I18n.t('helpers.label.page.answer_type_options.names.' + option) },
      ->(option) { I18n.t('helpers.label.page.answer_type_options.descriptions.' + option) }
)  %>
