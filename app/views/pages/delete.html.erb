<% set_page_title(title_with_error_prefix(@page.question_text, @page.errors.any?)) %>
<% content_for :back_link, govuk_back_link_to(form_path(@form)) %>
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <span class="govuk-caption-l"><%= @page.question_text %></span>
    <h1 class="govuk-heading-l">Are you sure you want to delete this page?</h1>
    <div class="govuk-button-group">
      <%= govuk_button_to 'Delete this page', destroy_page_path(@form, @page), method: :delete, warning: true %>

      <p class="govuk-body">
        <%=t('pages.or')%> <%= link_to "go back to page", edit_page_path(@form,@page), class: "govuk-link govuk-link--no-visited-state" %>
      </p>
    </div>
  </div>
</div>
