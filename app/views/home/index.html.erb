<h1 class="govuk-heading-l">GOV.UK Forms</h1>

<% if flash[:message] %>
  <p class="govuk-body">
    <%= flash[:message] %>
  </p>
<% end %>

<%= link_to new_form_path, role: "button", draggable: "false", class: "govuk-button govuk-button--primary", "data-module": "govuk-button" do %>
  Create a form
  <svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" aria-hidden="true" focusable="false">
    <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z" />
  </svg>
<% end %>

<h2 class="govuk-heading-m">Your forms</h2>
<dl class="govuk-summary-list">
  <% @forms.each do |form| %>
    <div class="govuk-summary-list__row">
      <dt class="govuk-summary-list__key govuk-!-width-full govuk-!-font-weight-regular">
        <p class="govuk-body"><%= form.name %></p>
      </dt>
      <dd class="govuk-summary-list__actions">
        <%= link_to form_path(form.id), class: "govuk-link govuk-link--no-visited-state" do %>
          Edit <span class="govuk-visually-hidden"> <%= form.name %></span>
        <% end %><br>
        <a class="govuk-link govuk-link--no-visited-state" href="<%= ENV['RUNNER_BASE'] %>/<%= form.id %>">View in runner<span class="govuk-visually-hidden">: <%= form.name %></span></a>
      </dd>
    </div>
  <% end %>
</dl>
