<h1 class="govuk-heading-xl">GOV.UK Forms</h1>

<% if flash[:message] %>
  <p class="govuk-body">
    <%= flash[:message] %>
  </p>
<% end %>
<p class="govuk-body">Last seen: <%= session[:last_seen] %><p>
  <% session[:last_seen] = "last_seen", DateTime.now.strftime("%A %B %d %Y, at %I:%M.") %>

<p class="govuk-body">Under construction, coming soon<p>

<h2 class="govuk-heading-l">Your forms</h2>

<%= link_to new_form_path, role: "button", draggable: "false", class: "govuk-button govuk-button--start", "data-module": "govuk-button" do %>
  Create a new form
  <svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" aria-hidden="true" focusable="false">
    <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z" />
  </svg>
<% end %>

<ul class="govuk-list govuk-list--bullet">
  <% @forms.each do |form| %>
    <li>
      <%= link_to form.name, edit_form_path(form.id), class: "govuk-link govuk-link--no-visited-state" %><br />
      <a class="govuk-link govuk-link--no-visited-state" href="<%= ENV['RUNNER_BASE'] %>/<%= form.id %>">View in runner</a>
    </li>
  <% end %>
</ul>
