<% set_page_title(t('page_titles.your_form_is_live')) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= govuk_panel(title_text: t('page_titles.your_form_is_live')) %>

    <h2 class="govuk-heading-m"><%= t('make_live.confirmation.form_name') %></h2>

    <p class="govuk-body"><%= @form.name %></p>

    <%= render FormUrlComponent::View.new(link_to_runner(Settings.forms_runner.url, @form.id, @form.form_slug, live: true )) %>

    <%= t("make_live.confirmation.body_html") %>

    <p class="govuk-body">
      <%= govuk_link_to t("make_live.confirmation.continue_link"), live_form_path(@form.id) %>
    </p>
  </div>
</div>
