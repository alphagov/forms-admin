<% content_for :back_link do %>
  <%= link_to "Back", root_path, class: "govuk-back-link" %>
<% end %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <% if flash[:message] %>
      <p class="govuk-body">
        <%= flash[:message] %>
      </p>
    <% end %>

    <%= form_with url: forms_path do |form| %>
      <%= form.govuk_text_field :name, label: { text:'What is the name of your form?', tag: 'h1', size: 'l' }, hint: {text:"The form name will be shown at the top of each page of the form. Use a name that describes what the form will help people to do. For example 'Apply for a juggling licence'."} %>

      <div>
        <%= form.submit "Save and continue", class: "govuk-button" %>
      </div>
    <% end %>
  </div>
</div>
