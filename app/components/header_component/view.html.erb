<% if @current_user %>
  <%= govuk_header navigation_classes: ["govuk-header__navigation--end"] do |header|
    header.product_name(name: "Forms")
    header.navigation_item(text: @current_user.name, href: @user_profile_url, active: false) if @show_profile_link
    header.navigation_item(text: "Sign out", href: gds_sign_out_path, active: false)
  end %>
<% else %>
  <%= govuk_header do |header|
    header.product_name(name: "Forms")
  end %>
<% end %>
