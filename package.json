{
  "name": "app",
  "private": "true",
  "browserslist": [
    ">0.1%",
    "last 2 Chrome versions",
    "last 2 Firefox versions",
    "last 2 Edge versions",
    "last 2 Samsung versions",
    "Firefox ESR",
    "iOS >= 12.1",
    "Safari >= 12"
  ],
  "scripts": {
    "test": "jest",
    "lint": "standard | snazzy & stylelint 'app/**/*.scss'",
    "format": "standard --fix & stylelint 'app/**/*.scss' --fix",
    "ci": "bin/setup && bin/rails server",
    "dev": "vite dev"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.22.9",
    "@testing-library/dom": "^9.3.1",
    "autoprefixer": "^10.4.4",
    "cssnano": "^5.1.7",
    "jest": "^27.5.1",
    "postcss": "^8.4.12",
    "sass": "^1.49.11",
    "snazzy": "^9.0.0",
    "standard": "^16.0.4",
    "stylelint": "^14.6.1",
    "stylelint-config-gds": "^0.2.0",
    "vite": "^4.3.9",
    "vite-plugin-ruby": "^3.2.2"
  },
  "dependencies": {
    "dfe-autocomplete": "github:DFE-Digital/dfe-autocomplete#36d80e6b5bba67c92cd9ec6982a4e536d1889aed",
    "govuk-frontend": "~4.7.0"
  },
  "standard": {
    "globals": [
      "describe",
      "it",
      "beforeEach",
      "before",
      "after",
      "test",
      "jest",
      "expect"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-gds/scss"
  }
}
