{
  "name": "app",
  "private": "true",
  "type": "module",
  "browserslist": [
    ">0.1% and not dead",
    "last 2 Chrome versions",
    "last 2 Firefox versions",
    "last 2 Edge versions",
    "last 2 Samsung versions",
    "Firefox ESR",
    "iOS >= 12.1",
    "Safari >= 12"
  ],
  "scripts": {
    "test": "jest",
    "lint": "standard | snazzy && stylelint 'app/**/*.scss'",
    "format": "standard --fix & stylelint 'app/**/*.scss' --fix",
    "ci": "bin/setup && bin/rails server",
    "dev": "vite dev"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.24.4",
    "@testing-library/dom": "^10.0.0",
    "autoprefixer": "^10.4.19",
    "cssnano": "^7.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.38",
    "regenerator-runtime": "^0.14.1",
    "sass": "^1.75.0",
    "snazzy": "^9.0.0",
    "standard": "^17.1.0",
    "stylelint": "^16.4.0",
    "stylelint-config-gds": "^2.0.0",
    "vite": "^5.2.10",
    "vite-plugin-ruby": "^5.0.0"
  },
  "dependencies": {
    "dfe-autocomplete": "github:DFE-Digital/dfe-autocomplete#8e7389ff62a38bc8880323f6c58eed9c8d10f080",
    "govuk-frontend": "5.3.1",
    "turndown": "^7.1.3"
  },
  "standard": {
    "globals": [
      "describe",
      "it",
      "beforeEach",
      "beforeAll",
      "afterEach",
      "afterAll",
      "before",
      "after",
      "test",
      "jest",
      "expect"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-gds/scss"
  }
}
