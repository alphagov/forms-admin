{
  "name": "app",
  "private": "true",
  "browserslist": [
    "last 2 versions",
    "ie 8",
    "ie 9",
    "iOS 9"
  ],
  "scripts": {
    "build": "rollup -c rollup.config.js",
    "watch:js": "rollup -c rollup.config.js --watch",
    "dev": "npm run watch:js & npm run watch:css",
    "build:css": "sass ./app/assets/stylesheets/application.sass.scss ./app/assets/builds/application.css --no-source-map --load-path=node_modules",
    "watch:css": "sass ./app/assets/stylesheets/application.sass.scss ./app/assets/builds/application.css --load-path=node_modules --watch",
    "test": "jest",
    "cypress": "cypress open",
    "lint": "standard & stylelint '**/*.scss'"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.8",
    "@babel/preset-env": "^7.16.11",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-commonjs": "^21.0.3",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "core-js": "^3.21.1",
    "cypress": "^9.5.3",
    "jest": "^27.5.1",
    "rollup": "^2.70.1",
    "sass": "^1.49.9",
    "standard": "^16.0.4",
    "stylelint": "^14.6.1",
    "stylelint-config-gds": "^0.2.0"
  },
  "dependencies": {
    "govuk-frontend": "^4.0.1"
  },
  "standard": {
    "globals": [
      "describe",
      "it",
      "cy"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-gds/scss"
  }
}
